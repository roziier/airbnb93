<section class="vh-70">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Log in</h3>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div data-mdb-input-init class="form-outline mb-4">
                <%= f.label :email, class: "form-label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
              </div>

              <div data-mdb-input-init class="form-outline mb-4">
                <%= f.label :password, class: "form-label"%>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>

              <div data-mdb-button-init data-mdb-ripple-init>
                <%= f.submit "Log in", class:"btn btn-light btn-lg btn-block" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
